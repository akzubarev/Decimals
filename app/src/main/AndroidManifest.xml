<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.education4all.decimals">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">

        <activity
            android:name="com.education4all.decimals.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/short_app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar.OldMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.education4all.decimals.TaskActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_task"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        </activity>

        <!--<activity-->
            <!--android:name=".SettingsActivity"-->
            <!--android:configChanges="keyboardHidden|orientation|screenSize"-->
            <!--android:label="@string/title_activity_settings"-->
            <!--android:screenOrientation="portrait">-->
        <!--</activity>-->

        <activity
            android:name="com.education4all.decimals.SettingsSimpleActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_settings_simple"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.decimals.MainActivity" />
        </activity>

        <activity
            android:name="com.education4all.decimals.ComplexityActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_complexity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.decimals.SettingsSimpleActivity" />
        </activity>

        <activity
            android:name="com.education4all.decimals.StatiscticsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar.OldMenu"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_statisctics"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.decimals.MainActivity" />
        </activity>

        <activity
            android:name="com.education4all.decimals.StatTourActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar.OldMenu"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_stat_tour"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.decimals.StatiscticsActivity" />
        </activity>

