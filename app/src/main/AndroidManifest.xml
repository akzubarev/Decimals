<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.education4all.mathcoach">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_task"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".SettingsSimpleActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_settings_simple"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.mathcoach.MainActivity" />
        </activity>
        <activity
            android:name=".ComplexityActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_complexity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.mathcoach.SettingsSimpleActivity" />
        </activity>
        <activity
            android:name=".StatiscticsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_statisctics"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.mathcoach.MainActivity" />
        </activity>
        <activity
            android:name=".StatTourActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_stat_tour"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.mathcoach.StatiscticsActivity" />
        </activity>
        <activity
            android:name=".wheel_picker"
            android:label="@string/title_activity_wheel_picker">

        </activity>
        <activity
            android:name=".AuthorsActivity"
            android:label="@string/title_activity_authors"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.mathcoach.MainActivity" />
        </activity>
    </application>

</manifest>