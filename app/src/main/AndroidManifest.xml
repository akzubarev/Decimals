<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.education4all.decimals">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.education4all.ThemedApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.education4all.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/short_app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.education4all.TaskActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_task"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.MainActivity" />
        </activity>

        <activity
            android:name="com.education4all.SettingsMainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_settings_simple"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.MainActivity" />
        </activity>

        <activity
            android:name="com.education4all.ComplexityActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_complexity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.SettingsMainActivity" />
        </activity>

        <activity
            android:name="com.education4all.StatiscticsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_statisctics"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.MainActivity" />
        </activity>

        <activity
            android:name="com.education4all.StatTourActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_stat_tour"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.StatiscticsActivity" />
        </activity>

        <!--<activity-->
        <!--android:name=".wheel_picker"-->
        <!--android:label="@string/title_activity_wheel_picker">-->
        <!--</activity>-->

        <activity
            android:name="com.education4all.AuthorsActivity"
            android:label="@string/title_activity_authors"
            android:parentActivityName="com.education4all.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.MainActivity" />
        </activity>


        <activity
            android:name="com.education4all.WebActivity"
            android:label="Поддержать"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.education4all.AuthorsActivity" />
        </activity>
    </application>
</manifest>