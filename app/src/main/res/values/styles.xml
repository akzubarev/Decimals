<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>

        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>

        <item name="popupMenuStyle">@style/CustomPopup</item>
        <item name="android:popupMenuStyle">@style/CustomPopup</item>

        <item name="android:textAppearanceLargePopupMenu">@style/MenuTextStyle</item>
        <item name="textAppearanceLargePopupMenu">@style/MenuTextStyle</item>

        <item name="android:textAppearanceSmallPopupMenu">@style/MenuTextStyle</item>
        <item name="textAppearanceSmallPopupMenu">@style/MenuTextStyle</item>

        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/main</item>
        <item name="android:textColorSecondary">@color/additional</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="ActionBarText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/dimen1</item>
        <item name="android:textFontWeight" tools:targetApi="p">300</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="CustomPopup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/main</item>
        <item name="android:itemBackground">@color/color4</item>
        <item name="android:popupBackground">@color/color4</item>
        <item name="android:textSize">@dimen/dimen4</item>item>
        <item name="android:textAllCaps">false</item>item>
        <item name="textAllCaps">false</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/additional
        </item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/additional
        </item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/additional</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/additional</item>
        <item name="colorControlActivated">@color/additional</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/color3</item>
        <item name="android:itemBackground">@color/color3</item>
        <item name="android:textColorPrimary">@color/main</item>
        <item name="android:windowTitleStyle">@style/AlertTitleStyle</item>
        <item name="android:textAppearanceMedium">@style/AlertTitleStyle</item>
        <item name="android:buttonStyle">@style/AlertButtonStyle</item>
    </style>

    <style name="AlertTitleStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/dimen3</item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/main</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen4</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabText</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/dimen3</item>
        <item name="textAllCaps">false</item>
        <item name="android:textFontWeight" tools:targetApi="p">300</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/dimen4</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/additional</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">@dimen/actionbaricon</item>
        <item name="android:maxWidth">@dimen/actionbaricon</item>
        <item name="android:width">@dimen/actionbaricon</item>
        <item name="iconTint">@color/additional</item>
    </style>

    <style name="TaskRL" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">60dp</item>
<!--                <item name="android:layout_margin">-8dp</item>-->
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="TaskButtons" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:includeFontPadding">false</item>=

        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/dimen0</item>
    </style>

    <style name="TaskImageButtons" parent="TaskButtons">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">@dimen/bpleft</item>
        <item name="android:paddingTop">@dimen/bptop</item>
        <item name="android:paddingRight">@dimen/bpright</item>
        <item name="android:paddingBottom">@dimen/bpbottom</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/additional</item>
    </style>

    <style name="TaskLine">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/shadowed</item>
        <item name="android:layout_marginBottom">@dimen/linemargin</item>
    </style>

    <style name="TaskText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/linemargin</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/dimen6</item>
    </style>
</resources>
