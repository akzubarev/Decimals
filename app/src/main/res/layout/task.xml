<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style = "@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
    tools:context="com.education4all.mathcoach.TaskActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.7"
        android:layout_height="fill_parent">

        <TextView
            android:id = "@+id/pressToShowTaskTV"
            android:background="@android:color/transparent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|bottom"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="\Нажмите, чтобы показать задание"
            />

        <TextView
            android:id = "@+id/expTextView"
            android:background="#5c5c5c"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:onClick="showTask"
            android:clickable="true"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u2715"
            android:background="@android:color/transparent"
            android:id="@+id/button"
            android:includeFontPadding="false"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="crossClick" />
    </RelativeLayout>

    <ProgressBar
        android:layout_width="fill_parent"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:background="@color/material_blue_grey_800"
        android:layout_height="10dp"
        android:id="@+id/taskProgress"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.4"
        android:layout_height="match_parent"
        android:id="@+id/content_frame"
        android:orientation="horizontal">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_margin="-8dp"
                android:onClick="okButtonClick"
                android:text="OK"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="3"
                app:layout_gravity="fill"
                app:layout_row="3"
                app:layout_rowSpan="1" />

            <Button
                android:id="@+id/But_5"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag="5"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="1"
                app:layout_row="1" />

            <Button
                android:layout_margin="-8dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:onClick="skipTask"
                android:text="\u2192"
                android:textColor="@android:color/white"
                android:textSize="60sp"
                app:layout_column="3"
                app:layout_gravity="fill"
                app:layout_row="1"
                app:layout_rowSpan="1" />

            <Button
                android:id="@+id/But_7"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag="7"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="0"
                app:layout_row="0" />

            <Button
                android:id="@+id/But_8"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag="8"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="1"
                app:layout_row="0" />

            <Button
                android:id="@+id/But_9"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag="9"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="2"
                app:layout_row="0" />

            <Button
                android:id="@+id/But_1"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag="1"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="0"
                app:layout_row="2" />

            <Button
                android:id="@+id/but_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag="0"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="1"
                app:layout_row="3"
                />
            <Button
                android:id="@+id/but_."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag=","
                android:text=","
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="2"
                app:layout_row="3"
                />

            <Button
                android:id="@+id/but_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:tag=""
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="0"
                app:layout_row="3"
                />
            <Button
                android:id="@+id/But_3"
                android:layout_margin="-8dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag="3"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="2"
                app:layout_row="2" />

            <Button
                android:id="@+id/But_2"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag="2"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="1"
                app:layout_row="2" />

            <Button
                android:layout_margin="-8dp"
                android:gravity="center"
                android:onClick="showAnswer"
                android:text="=?"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="3"
                app:layout_gravity="fill"
                app:layout_row="2"
                app:layout_rowSpan="1" />

            <Button

                android:id="@+id/But_del"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="charDelete"
                android:text="DEL"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="3"
                app:layout_gravity="fill"
                app:layout_row="0"
                app:layout_rowSpan="1" />

            <Button
                android:id="@+id/But_6"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag="6"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="2"
                app:layout_row="1" />

            <Button
                android:id="@+id/But_4"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag="4"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_column="0"
                app:layout_row="1" />
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</LinearLayout>