<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.education4all.mathcoach.TaskActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.7"
        android:layout_height="fill_parent">
        <TextView
            android:id = "@+id/expTextView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:onClick="lookAnswer"
            android:clickable="true"
            android:textSize="40sp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u2715"
            android:background="@android:color/transparent"
            android:id="@+id/button"
            android:includeFontPadding="false"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="crossClick" />
    </RelativeLayout>

    <ProgressBar
        android:layout_width="fill_parent"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_height="15dp"
        android:id="@+id/taskProgress"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_weight="0.4"
        android:layout_height="match_parent"
        android:id="@+id/content_frame"
        android:orientation="horizontal">



        <android.support.v7.widget.GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id = "@+id/buttonsLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity = "center"
            app:columnCount="4"
            app:rowCount="4"
            app:useDefaultMargins="false"
            >



            <Button android:text = "DEL"
                android:includeFontPadding="false"
                android:textSize="35sp"
                android:layout_margin="-8dp"
                app:layout_rowSpan = "1"
                app:layout_gravity = "fill"
                app:layout_column="3"
                app:layout_row="0"
                android:onClick="charDelete"
                />

            <Button android:text = "\u2192"
                android:includeFontPadding="false"
                android:textSize="60sp"
                android:layout_margin="-8dp"
                app:layout_rowSpan = "1"
                app:layout_gravity = "fill"
                app:layout_column="3"
                app:layout_row="1"
                android:onClick="skipTask"
                />

            <Button android:text = "7"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:tag="7"
                app:layout_row="0"
                android:onClick="numberPress"
                android:id="@+id/But_7"
                app:layout_column="0"
                android:layout_margin="-8dp"/>

            <Button android:text = "8"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:tag="8"
                android:onClick="numberPress"
                android:id="@+id/But_8"
                app:layout_column="1"
                app:layout_row="0"
                android:layout_margin="-8dp"/>

            <Button android:text = "9"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:tag="9"
                android:onClick="numberPress"
                android:id="@+id/But_9"
                app:layout_column="2"
                app:layout_row="0"
                android:layout_margin="-8dp"/>

            <Button android:text = "4"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:tag="4"
                android:onClick="numberPress"
                android:id="@+id/But_4"
                android:layout_margin="-8dp"
                app:layout_column = "0"
                app:layout_row="1"/>

            <Button android:text = "5"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:tag="5"
                android:onClick="numberPress"
                android:id="@+id/But_5"
                app:layout_column="1"
                app:layout_row="1"
                android:layout_margin="-8dp"/>

            <Button android:text = "6"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:tag="6"
                app:layout_column="2"
                app:layout_row="1"
                android:onClick="numberPress"
                android:id="@+id/But_6"
                android:layout_margin="-8dp"/>


            <Button android:text = "1"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:tag="1"
                android:onClick="numberPress"
                android:id="@+id/But_1"
                app:layout_column="0"
                app:layout_row="2"
                android:layout_margin="-8dp"/>

            <Button android:text = "2"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:tag="2"
                app:layout_column="1"
                app:layout_row="2"
                android:onClick="numberPress"
                android:id="@+id/But_2"
                android:layout_margin="-8dp"/>

            <Button android:text = "3"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:tag="3"
                app:layout_column="2"
                app:layout_row="2"
                android:onClick="numberPress"
                android:id="@+id/But_3"
                android:layout_margin="-8dp"/>


            <Button android:text = "0"
                android:tag="0"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:id="@+id/But_0"
                android:layout_margin="-8dp"
                android:onClick="numberPress"
                app:layout_gravity = "fill"
                app:layout_columnSpan = "3"
                app:layout_column="0"/>

            <Button android:text = "OK"
                android:layout_margin="-8dp"
                app:layout_row="3"
                app:layout_rowSpan="1"
                app:layout_gravity = "fill"
                android:textSize="35sp"
                app:layout_column="3"
                android:onClick="okButtonClick"/>

            <Button android:text = "=?"
                android:layout_margin="-8dp"
                app:layout_row="2"
                app:layout_rowSpan="1"
                app:layout_gravity = "fill"
                android:textSize="35sp"
                app:layout_column="3"
                android:onClick="showAnswer"/>



        </android.support.v7.widget.GridLayout>
    </LinearLayout>

</LinearLayout>