<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444444"
    android:orientation="vertical"
    tools:context="com.education4all.activities.TaskActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.7">

        <TextView
            android:id="@+id/expTextView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/color2"
            android:clickable="true"
            android:gravity="center"
            android:onClick="showTask"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main"
            android:textSize="@dimen/dimen0" />

        <TextView
            android:id="@+id/wrongAnswers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:ellipsize="start"
            android:gravity="top"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="12dp"
            android:paddingRight="40dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/main"
            android:textSize="@dimen/dimen4"
            android:textStyle="" />

        <TextView
            android:id="@+id/statistics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:ellipsize="start"
            android:gravity="bottom|start"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingBottom="25dp"
            android:singleLine="true"
            android:text="Решено 0"
            android:textColor="@color/main"
            android:textSize="@dimen/dimen6"
            android:textStyle="" />

        <TextView
            android:id="@+id/timertext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:ellipsize="start"
            android:gravity="bottom|end"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="25dp"
            android:singleLine="true"
            android:text="00:48/5:00"
            android:textColor="@color/main"
            android:textSize="@dimen/dimen6"
            android:textStyle="" />

        <TextView
            android:id="@+id/pressToShowTaskTV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:gravity="center|bottom"
            android:onClick="showTask"
            android:text="\Нажмите, чтобы показать задание"
            android:textColor="@color/main"
            android:textSize="@dimen/dimen6" />

        <TextView
            android:id="@+id/progressIcons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:ellipsize="start"
            android:gravity="left|bottom"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/main"
            android:textSize="@dimen/dimen4" />

        <ImageButton
            android:id="@+id/cross"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:includeFontPadding="false"
            android:onClick="crossClick"
            android:scaleType="fitCenter"
            android:src="@drawable/cross"
            android:text="\u2715"
            android:textColor="@color/additional"
            android:textSize="30sp"
            android:tint="@color/additional" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/taskProgress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:progress="50"
        android:progressDrawable="@drawable/progress_bar" />


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:background="@color/color3">

        <RelativeLayout
            android:id="@+id/Layout_7"
            style="@style/TaskRL"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_row="0"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_7"
                style="@style/TaskButtons"
                android:onClick="numberPress"
                android:tag="7"
                android:text="7" />

            <View
                android:id="@+id/Line_7"
                style="@style/TaskLine"
                android:layout_below="@id/Button_7"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_8"
            style="@style/TaskRL"
            app:layout_column="1"
            app:layout_columnWeight="0"
            app:layout_row="0"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_8"
                style="@style/TaskButtons"
                android:onClick="numberPress"
                android:tag="8"
                android:text="8" />

            <View
                android:id="@+id/Line_8"
                style="@style/TaskLine"
                android:layout_below="@id/Button_8"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_9"
            style="@style/TaskRL"
            app:layout_column="2"
            app:layout_columnWeight="0"
            app:layout_row="0"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_9"
                style="@style/TaskButtons"
                android:onClick="numberPress"
                android:tag="9"
                android:text="9" />

            <View
                android:id="@+id/Line_9"
                style="@style/TaskLine"
                android:layout_below="@id/Button_9"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/Layout_Del"
            style="@style/TaskRL"
            app:layout_column="3"
            app:layout_row="0">

            <ImageButton
                android:id="@+id/Button_Del"
                style="@style/TaskImageButtons"
                android:onClick="charDelete"
                android:src="@drawable/delete" />

            <View
                android:id="@+id/Line_del"
                style="@style/TaskButtons"
                android:layout_below="@id/Button_Del"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/Text_Del"
                style="@style/TaskText"
                android:layout_below="@id/Button_Del"
                android:text="Удалить" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_4"
            style="@style/TaskRL"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_row="1"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_4"
                style="@style/TaskButtons"
                android:onClick="numberPress"
                android:tag="4"
                android:text="4" />

            <View
                android:id="@+id/Line_4"
                style="@style/TaskLine"
                android:layout_below="@id/Button_4"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_5"
            style="@style/TaskRL"
            app:layout_column="1"
            app:layout_columnWeight="0"
            app:layout_row="1"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_5"
                style="@style/TaskButtons"
                android:onClick="numberPress"
                android:tag="5"
                android:text="5" />

            <View
                android:id="@+id/Line_5"
                style="@style/TaskLine"
                android:layout_below="@id/Button_5"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_6"
            style="@style/TaskRL"
            app:layout_column="2"
            app:layout_columnWeight="0"
            app:layout_row="1"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_6"
                style="@style/TaskButtons"
                android:onClick="numberPress"
                android:tag="6"
                android:text="6" />


            <View
                android:id="@+id/Line_6"
                style="@style/TaskLine"
                android:layout_below="@id/Button_6"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/Layout_skip"
            style="@style/TaskRL"
            app:layout_column="3"
            app:layout_row="1">

            <ImageButton
                android:id="@+id/Button_Skip"
                style="@style/TaskImageButtons"
                android:onClick="skipTask"
                android:src="@drawable/skip"
                android:text="\u2192"
                app:layout_gravity="fill" />

            <View
                android:id="@+id/Line_skip"
                style="@style/TaskLine"
                android:layout_below="@id/Button_Skip"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/skiptext"
                style="@style/TaskText"
                android:layout_below="@id/Button_Skip"
                android:text="Пропуск" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_1"
            style="@style/TaskRL"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_row="2"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_1"
                style="@style/TaskButtons"
                android:onClick="numberPress"
                android:tag="1"
                android:text="1" />

            <View
                android:id="@+id/Line_1"
                style="@style/TaskLine"
                android:layout_below="@id/Button_1"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_2"
            style="@style/TaskRL"
            app:layout_column="1"
            app:layout_columnWeight="0"
            app:layout_row="2"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_2"
                style="@style/TaskButtons"
                android:onClick="numberPress"
                android:tag="2"
                android:text="2" />

            <View
                android:id="@+id/Line_2"
                style="@style/TaskLine"
                android:layout_below="@id/Button_2"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_3"
            style="@style/TaskRL"
            app:layout_column="2"
            app:layout_columnWeight="0"
            app:layout_row="2"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_3"
                style="@style/TaskButtons"
                android:onClick="numberPress"
                android:tag="3"
                android:text="3" />

            <View
                android:id="@+id/Line_3"
                style="@style/TaskLine"
                android:layout_below="@id/Button_3"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_help"
            style="@style/TaskRL"
            app:layout_column="3"
            app:layout_row="2">

            <ImageButton
                android:id="@+id/Button_Help"
                style="@style/TaskImageButtons"
                android:adjustViewBounds="true"
                android:onClick="showAnswer"
                android:src="@drawable/help"
                android:text="=?"
                app:layout_gravity="fill" />

            <View
                android:id="@+id/Line_help"
                style="@style/TaskLine"
                android:layout_below="@id/Button_Help"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/helptext"
                style="@style/TaskText"
                android:layout_below="@id/Button_Help"
                android:text="Подсказка" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_empty"
            style="@style/TaskRL"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_row="3"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_empty"
                style="@style/TaskButtons"
                android:tag="empty"
                android:text="" />

            <View
                android:id="@+id/Line_empty"
                style="@style/TaskLine"
                android:visibility="invisible"
                android:layout_below="@id/Button_empty"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_0"
            style="@style/TaskRL"
            app:layout_column="1"
            app:layout_columnWeight="0"
            app:layout_row="3"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_0"
                style="@style/TaskButtons"
                android:onClick="numberPress"
                android:tag="0"
                android:text="0" />

            <View
                android:id="@+id/Line_0"
                style="@style/TaskLine"
                android:layout_below="@id/Button_0"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_sym"
            style="@style/TaskRL"
            app:layout_column="2"
            app:layout_columnWeight="0"
            app:layout_row="3"
            app:layout_rowWeight="0">

            <Button
                android:id="@+id/Button_sym"
                style="@style/TaskButtons"
                android:onClick="numberPress"
                android:tag=","
                android:text="," />

            <View
                android:id="@+id/Line_sym"
                style="@style/TaskLine"
                android:layout_below="@id/Button_sym"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_check"
            style="@style/TaskRL"
            app:layout_column="3"
            app:layout_row="3">

            <ImageButton
                android:id="@+id/Button_Check"
                style="@style/TaskImageButtons"
                android:onClick="okButtonClick"
                android:src="@drawable/check"
                app:layout_gravity="fill" />

            <View
                android:id="@+id/Line_check"
                style="@style/TaskLine"
                android:layout_below="@id/Button_Check"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/checktext"
                style="@style/TaskText"
                android:layout_below="@id/Button_Check"
                android:text="Проверить" />
        </RelativeLayout>

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>