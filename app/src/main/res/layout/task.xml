<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#444444"
    style = "@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
    tools:context="com.education4all.decimals.TaskActivity"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.7"
        android:layout_height="fill_parent">

        <TextView
            android:id = "@+id/expTextView"
            android:background="@color/color2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:onClick="showTask"
            android:clickable="true"
            android:textSize="@dimen/dimen0"
            android:textColor="@color/main"
            />

        <TextView
            android:id = "@+id/pressToShowTaskTV"
            android:background="@android:color/transparent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|bottom"
            android:onClick="showTask"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="\Нажмите, чтобы показать задание"
            android:textSize="@dimen/dimen6"
            android:textColor="@color/main"
            />
        <Button
            android:id = "@+id/cross"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u2715"
            android:background="@android:color/transparent"
            android:includeFontPadding="false"
            android:textSize="30sp"
            android:textColor="@color/additional"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:onClick="crossClick" />
    </RelativeLayout>

    <ProgressBar
        android:layout_width="fill_parent"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable = "@drawable/progress_bar"
        android:layout_height="10dp"
        android:id="@+id/taskProgress"
        android:progress="50"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.4"
        android:layout_height="match_parent"
        android:id="@+id/content_frame"
        android:orientation="horizontal">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color3">

            <ImageButton
                android:id="@+id/But_Check"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:onClick="okButtonClick"
                android:padding="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/check"
                android:tint="@color/additional"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_column="3"
                app:layout_gravity="fill"
                app:layout_row="3"
                app:layout_rowSpan="1" />

            <TextView
                android:id = "@+id/checktext"
                android:background="@android:color/transparent"
                app:layout_gravity="center|bottom"
                android:layout_marginBottom="10sp"
                android:gravity="center|bottom"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Проверить"
                android:textSize= "@dimen/dimen6"
                app:layout_column="3"
                app:layout_row="3"
                app:layout_rowSpan="1"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/But_5"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:background="@android:color/transparent"
                android:tag="5"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="1"
                app:layout_row="1"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/But_Skip"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:onClick="skipTask"
                android:tint="@color/additional"
                android:text="\u2192"
                android:src="@drawable/skip"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"
                android:textSize="60sp"
                android:padding="30dp"
                app:layout_column="3"
                app:layout_gravity="fill"
                app:layout_row="1"
                app:layout_rowSpan="1"
                android:layout_weight="1" />

            <TextView
                android:id = "@+id/skiptext"
                android:background="@android:color/transparent"
                app:layout_gravity="center|bottom"
                android:gravity="center|bottom"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Пропуск"
                android:textSize= "@dimen/dimen6"
                app:layout_column="3"
                app:layout_row="1"
                app:layout_rowSpan="1"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/But_7"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:background="@android:color/transparent"
                android:tag="7"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="0"
                app:layout_row="0"
                android:layout_weight="1" />

            <Button
                android:id="@+id/But_8"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:background="@android:color/transparent"
                android:tag="8"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="1"
                app:layout_row="0"
                android:layout_weight="1" />

            <Button
                android:id="@+id/But_9"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:background="@android:color/transparent"
                android:onClick="numberPress"
                android:tag="9"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="2"
                app:layout_row="0"
                android:layout_weight="1" />

            <Button
                android:id="@+id/But_1"
                android:layout_margin="-8dp"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:background="@android:color/transparent"
                android:tag="1"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="0"
                app:layout_row="2"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/But_0"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="-8dp"
                android:background="@android:color/transparent"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag="0"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="1"
                app:layout_row="3"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/But_comma"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="-8dp"
                android:background="@android:color/transparent"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:tag=","
                android:text=","
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="2"
                app:layout_row="3"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/But_empty"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="@android:color/transparent"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:tag=""
                android:text=""
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="0"
                app:layout_row="3"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/But_3"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="-8dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:background="@android:color/transparent"
                android:tag="3"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="2"
                app:layout_row="2"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/But_2"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:background="@android:color/transparent"
                android:tag="2"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="1"
                app:layout_row="2"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/But_Help"
                android:layout_margin="-8dp"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginBottom="-8dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:onClick="showAnswer"
                android:background="@android:color/transparent"
                android:text="=?"
                android:textColor="@color/additional"
                android:textSize= "@dimen/dimen0"
                app:layout_column="3"
                app:layout_gravity="fill"
                app:layout_row="2"
                app:layout_rowSpan="1"
                android:layout_weight="1"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <TextView
                android:id = "@+id/helptext"
                android:background="@android:color/transparent"
                app:layout_gravity="center|bottom"
                android:gravity="center|bottom"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Подсказка"
                android:textSize= "@dimen/dimen6"
                app:layout_column="3"
                app:layout_row="2"
                app:layout_rowSpan="1"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/But_Del"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:includeFontPadding="false"
                android:onClick="charDelete"
                android:src="@drawable/delete"
                android:tint="@color/additional"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="28dp"
                android:paddingBottom="32dp"
                app:layout_column="3"
                app:layout_gravity="fill"
                app:layout_row="0"
                app:layout_rowSpan="1"
                android:layout_weight="1" />



            <TextView
                android:id = "@+id/deletetext"
                android:background="@android:color/transparent"
                app:layout_gravity="center|bottom"
                android:gravity="center|bottom"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Удалить"
                android:textSize= "@dimen/dimen6"
                app:layout_column="3"
                app:layout_row="0"
                app:layout_rowSpan="1"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/But_6"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:onClick="numberPress"
                android:background="@android:color/transparent"
                android:tag="6"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="2"
                app:layout_row="1"
                android:layout_weight="1" />

            <Button
                android:id="@+id/But_4"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="-8dp"
                android:includeFontPadding="false"
                android:background="@android:color/transparent"
                android:onClick="numberPress"
                android:tag="4"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize= "@dimen/dimen0"
                app:layout_column="0"
                app:layout_row="1"
                android:layout_weight="1"/>
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</LinearLayout>