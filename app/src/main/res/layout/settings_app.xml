        <LinearLayout
            android:id="@+id/id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="0"
                android:gravity="center_vertical|start"
                android:text="ID"
                android:textColor="@color/main"
                android:textSize="@dimen/dimen4" />

            <TextView
                android:id="@+id/id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:tag="1"
                android:text="exampleexampleexample"
                android:textColor="@color/shadowed"
                android:textIsSelectable="true"
                android:textSize="@dimen/dimen5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/queue_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Работа над ошибками"
                    android:textColor="@color/main"
                    android:textSize="@dimen/dimen4" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Если включено, неправильно решенные задания будут появляться снова"
                    android:textColor="@color/shadowed"
                    android:textSize="@dimen/dimen6" />

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/queue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_weight="0"
                android:checked="false"
                android:gravity="center_vertical|end"
                android:onClick="toggleQueue"
                android:textOff="⨯"
                android:textOn="✓"
                app:showText="true"
                app:thumbTint="@color/additional"
                app:trackTint="@color/shadowed" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="0"
                android:gravity="center_vertical|start"
                android:text="Цель на день"
                android:textColor="@color/main"
                android:textSize="@dimen/dimen4" />

            <TextView
                android:id="@+id/goal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:onClick="goalDropdown"
                android:tag="1"
                android:text="5 мин"
                android:textColor="@color/additional"
                android:textSize="@dimen/dimen4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reminder_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="Напоминать"
                android:textColor="@color/main"
                android:textSize="@dimen/dimen4" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_weight="0"
                android:checked="false"
                android:gravity="center_vertical|end"
                android:onClick="toggleReminder"
                android:textOff="⨯"
                android:textOn="✓"
                app:showText="true"
                app:thumbTint="@color/additional"
                app:trackTint="@color/shadowed" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/remind_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="Время напоминания"
                android:textColor="@color/main"
                android:textSize="@dimen/dimen4" />

            <TextView
                android:id="@+id/remind_time"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:onClick="reminderDropdown"
                android:tag="1"
                android:text="18:00"
                android:textColor="@color/additional"
                android:textSize="@dimen/dimen4" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
