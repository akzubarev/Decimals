<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.education4all.decimals.SettingsSimpleActivity">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:stretchColumns="*"
            android:weightSum="1"
            tools:context="com.education4all.decimals.SettingsSimpleActivity">


            <TextView
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:text="Вид и сложность заданий"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />


            <TableRow>


                <TextView
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical|start"
                    android:text="Сложение"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkBoxAdd1"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="1"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxAdd2"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="1"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxAdd3"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="1"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxAdd4"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="1"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <Button
                    android:id="@+id/buttonAdd"
                    android:layout_width="30dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:onClick="startCompl"
                    android:paddingBottom="5dp"
                    android:tag="1"
                    android:text="@string/Arrow"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical|start"
                    android:text="Вычитание"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkBoxSub1"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="2"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxSub2"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="2"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxSub3"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="2"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxSub4"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="2"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <Button
                    android:id="@+id/buttonSub"
                    android:layout_width="10dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:onClick="startCompl"
                    android:paddingBottom="5dp"
                    android:tag="2"
                    android:text="@string/Arrow"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical|start"
                    android:text="Умножение"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkBoxMul1"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="3"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxMul2"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="3"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxMul3"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="3"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxMul4"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="3"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <Button
                    android:id="@+id/buttonMul"
                    android:layout_width="10dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:onClick="startCompl"
                    android:paddingBottom="5dp"
                    android:tag="3"
                    android:text="@string/Arrow"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical|start"
                    android:text="Деление"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkBoxDiv1"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="4"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxDiv2"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="4"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxDiv3"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="4"
                    android:theme="@style/MyCheckBox"
                    app:buttonTint="@android:color/darker_gray" />

                <CheckBox
                    android:id="@+id/checkBoxDiv4"
                    android:layout_gravity="center"
                    android:layout_marginRight="-20px"
                    android:gravity="center_vertical|start"
                    android:onClick="onCheckBoxClick"
                    android:tag="4"
                    app:buttonTint="@android:color/darker_gray" />

                <Button
                    android:id="@+id/buttonDiv"
                    android:layout_width="10dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:onClick="startCompl"
                    android:paddingBottom="5dp"
                    android:tag="4"
                    android:text="@string/Arrow"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp" />

            </TableRow>


        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:stretchColumns="*"
            android:weightSum="1"
            tools:context="com.education4all.decimals.SettingsSimpleActivity">

            <TableRow>


                <TextView
                    android:id="@+id/roundMinText"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Длина раунда (мин.)"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="10dip"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="2dip" />

            </TableRow>

            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/round_length_slider"
                android:layout_width="380sp"
                android:layout_height="wrap_content"
                app:isb_indicator_color="@android:color/darker_gray"
                app:isb_indicator_text_color="@android:color/darker_gray"
                app:isb_indicator_text_size="18sp"
                app:isb_max="100"
                app:isb_min="0"
                app:isb_only_thumb_draggable="false"
                app:isb_progress="22"
                app:isb_seek_smoothly="true"
                app:isb_show_indicator="none"
                app:isb_show_tick_marks_type="divider"
                app:isb_show_tick_texts="true"
                app:isb_thumb_color="@android:color/darker_gray"
                app:isb_thumb_size="20dp"
                app:isb_tick_marks_color="@android:color/black"
                app:isb_tick_marks_size="10dp"
                app:isb_tick_texts_array="@array/round_length"
                app:isb_tick_texts_color="@android:color/darker_gray"
                app:isb_tick_texts_size="15sp"
                app:isb_ticks_count="10"
                app:isb_track_background_color="#44A19292"
                app:isb_track_background_size="2dp"
                app:isb_track_progress_color="@android:color/darker_gray"
                app:isb_track_progress_size="4dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="15dip"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="2dip" />

            </TableRow>

            <TableRow>


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Условие исчезнет через (сек.)"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp" />

                />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="10dip"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="2dip" />

            </TableRow>

            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/disappear_time_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isb_indicator_color="@android:color/darker_gray"
                app:isb_indicator_text_color="@android:color/darker_gray"
                app:isb_indicator_text_size="18sp"
                app:isb_max="100"
                app:isb_min="0"
                app:isb_only_thumb_draggable="false"
                app:isb_progress="22"
                app:isb_seek_smoothly="true"
                app:isb_show_indicator="none"
                app:isb_show_tick_marks_type="divider"
                app:isb_show_tick_texts="true"
                app:isb_thumb_color="@android:color/darker_gray"
                app:isb_thumb_size="20dp"
                app:isb_tick_marks_color="@android:color/black"
                app:isb_tick_marks_size="10dp"
                app:isb_tick_texts_array="@array/dissapear_time"
                app:isb_tick_texts_color="@android:color/darker_gray"
                app:isb_tick_texts_size="15sp"
                app:isb_ticks_count="10"
                app:isb_track_background_color="#44A19292"
                app:isb_track_background_size="2dp"
                app:isb_track_progress_color="@android:color/darker_gray"
                app:isb_track_progress_size="4dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="15dip"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="2dip" />

            </TableRow>

            <TableRow>

            </TableRow>
        </TableLayout>

        <LinearLayout
            style="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="Таймер"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TimerState"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:onClick="timerDropdown"
                android:tag="1"
                android:text="Непрерывный"
                android:textAlignment="viewEnd"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>